def result

pipeline{
    agent any
    stages{
        stage('Test'){
            steps{
                script{
                    sh(script:"python ./test.py > result")
                    echo result
                }
            }
        }
        stage('post'){
            steps{
                script{
                        if (result == 'True'){
                            echo 'Test successfully'
                        }else{
                            echo 'Test fail'
                        }
                    }
            }
        }
       
    }
    
}
