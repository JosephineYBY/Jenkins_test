def result

pipeline{
    agent any
    stages{
        stage('Test'){
            steps{
                script{
                    result = sh(script:"python ./test.py", returnStdout:true).trim()
                    echo result[1]
                }
            }
        }
        stage('post'){
            steps{
                script{
                        if (result == 'True'){
                            echo 'Test successfully'
                        }else{
                            echo 'Test fail'
                        }
                    }
            }
        }
       
    }
    
}
